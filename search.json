---
layout: null
---
[
{% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url":   {{ post.url | relative_url | jsonify }},
    "content": {{ post.content 
                  | strip_html 
                  | strip_newlines 
                  | replace: '"', '\"' 
                  | truncate: 200 
                  | jsonify }}
  }{% if forloop.last == false %},{% endif %}
{% endfor %}
]
